<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/news_item_image"
        android:layout_width="120dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/hello"
        tools:src="@mipmap/ic_mei_ripple"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/news_item_image"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/news_item_layout_title"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:textColor="@android:color/holo_orange_dark"
            tools:text="@string/news_title"/>

        <TextView
            android:id="@+id/news_item_layout_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/holo_orange_dark"
            tools:text="@string/news_summary"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>